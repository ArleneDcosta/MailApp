<html lang=en>
<head>
  <title>Mailapp</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="public/css/style.css">
</head>
<body>    
    <br>
    <br>
    <br>
    
    <div id="myModal" class="modal">

        <!-- Modal content -->
        <div class="modal-content">
          <span class="close">&times;</span>
          <div class="table-responsive">
            <form method="POST" action="/send">
              <table class="table table-bordered">
                <tbody>
                  <tr>
                    <input   name="password" value=<%=result[result.length-2] %>>
                    <input  name="email" value=<%=result[result.length-3] %>>
                    <td>Subject:<input type='text' name="subject"></td>
                  </tr>
                  <tr>
                    <td>
                    <textarea rows="4" cols="50" name="message" ></textarea>
                  </td>
                    </tr>
                </tbody>
                 

              </table>
            <button>Send</button>
            </form>

          </div>
        </div>
      
      </div>
      <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3" id="nav">
                <nav class="navbar navbar-expand-md flex-column">
                    <div>
                        <a class="navbar-brand" href="#" id="heading">MAILAPP</a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar" id="burger">
                            <i class="fas fa-align-justify"></i>
                        </button>
                    </div>
                    <br>
                    <div class="collapse navbar-collapse nav-justified" id="collapsibleNavbar">
                        <ul class="nav nav-justified flex-column" id="" role="tablist">
                            <button style="height:50px;width:330px"id="myBtn"><i class="fa fa-fw fa-envelope"></i> Compose</button>
                            <li class="nav-item">
                                <form method="POST" action="/sent">
                                  <input type="hidden"  name="password" value=<%=result[result.length-2] %>>
                                  <input type="hidden" name="email" value=<%=result[result.length-3] %>>
                                  <button style="height:50px;width:330px"id="button"><i class="fa fa-fw fa-user"></i> Send</button>
                                </form>
                              </li>
                            <li class="nav-item">
                                <form method="POST" action="/unsent">
                                  <input type="hidden"  name="password" value=<%=result[result.length-2] %>>
                                  <input type="hidden" name="email" value=<%=result[result.length-3] %>>
                                  <button style="height:50px;width:330px"id="button"><i class="fa fa-fw fa-user"></i>Draft</button>
                                </form>
                              </li>
                            <br>
                        </ul>
                    </div>  
                </nav>
            </div>
            <div class="col-lg-9 col-md-9 col-sm-12">
                <div class="tab-content">
                  <% if (result[result.length-1]=='sent'){ %>
                    <div id="sent" class="container tab-pane active" value="sent">
                        <div class="bg "><br>SENT MESSAGES</div>
                        <br>
                        <table class="table">
                            <tr class="abc">
                                 <ul class="pagination justify-content-end">
                                    <li class="page-item"><span>1-50 of 234</span></li>
                                    <li class="page-item">
                                        <a class="btn" href="#"><i class="fa fa-angle-left  pagination-left"></i></a>
                                    </li>
                                    <li class="page-item">
                                        <a class="btn" href="#"><i class="fa fa-angle-right pagination-right"></i></a>
                                     </li>
                                </ul>
                            </tr>
                            
                                <% for(var i=0;i< result.length-3;i++) {  %>
                                
                                            <!-- <img src="{{image}}" width="4%" height="4%" > -->
                                            <tr>
                                            <td>
                                                <input type="checkbox" class="mail-checkbox">
                                                <i class="fa fa-star inbox-started"></i>
                                            </td>
                                            <td>
                                                &nbsp&nbspfrom:<%=result[i].fromsender %></p>
                                                <p>&nbsp&nbsp&nbsp&nbsp&nbsp to:<%=result[i].toreceiver %></p>
                                                <p>&nbsp&nbsp&nbsp&nbsp&nbsp <span class="font-weight-bold">subject:<%=result[i].subject %></span></p>
                                          
                                                <p>&nbsp&nbsp&nbsp&nbsp&nbsp text:<%=result[i].text %></p>
                                                <!-- <button>Forward</button> -->
                                            </td>
                                      
                                            <td class="date"><%=result[i].date %></td>
                                           
                                          </tr> 
                                  <% } %> 
                              
                          
                            <!-- <tr>
                              <td>
                                  <input type="checkbox" class="mail-checkbox">
                                  <i class="fa fa-star inbox-started"></i>
                              </td>
                              <td></td>
                              <td>content </td>
                              <td class="date">Date</td>
                          </tr> -->
                        </table>
                    </div>
                    <% }else if(result[result.length-1]=='draft'){ %>

                    <div id="draft" class="container tab-pane fade" value="draft">
                        <div class="bg"><br>DRAFT MESSAGES</div><br>
                        <p>Draft</p>
                    </div>
                    <% }else{ %>
                      <div id="sent" class="container tab-pane active" value="sent">
                          <div class="bg "><br>OUTBOX</div>
                          <br>
                          <table class="table">
                              <tr class="abc">
                                   <ul class="pagination justify-content-end">
                                      <li class="page-item"><span>1-50 of 234</span></li>
                                      <li class="page-item">
                                          <a class="btn" href="#"><i class="fa fa-angle-left  pagination-left"></i></a>
                                      </li>
                                      <li class="page-item">
                                          <a class="btn" href="#"><i class="fa fa-angle-right pagination-right"></i></a>
                                       </li>
                                  </ul>
                              </tr>
                              
                                  <% for(var i=0;i< result.length-3;i++) {  %>
                                  
                                              <!-- <img src="{{image}}" width="4%" height="4%" > -->
                                              <tr>
                                              <td>
                                                  <input type="checkbox" class="mail-checkbox">
                                                  <i class="fa fa-star inbox-started"></i>
                                              </td>
                                              <td>
                                                  &nbsp&nbspfrom:<%=result[i].fromsender %></p>
                                                  <p>&nbsp&nbsp&nbsp&nbsp&nbsp to:<%=result[i].toreceiver %></p>
                                                  <p>&nbsp&nbsp&nbsp&nbsp&nbsp <span class="font-weight-bold">subject:<%=result[i].subject %></span></p>
                                            
                                                  <p>&nbsp&nbsp&nbsp&nbsp&nbsp text:<%=result[i].text %></p>
                                                  <!-- <button>Forward</button> -->
                                              </td>
                                              
                                              <td class="date"><%=result[i].date %></td>
                                             
                                            </tr> 
                                    <% } %> 
                          </table>
                      </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    </div>
    <script>
      var modal = document.getElementById('myModal');
      console.log(modal);
// Get the button that opens the modal
  var btn = document.getElementById("myBtn");
  console.log(btn);

// Get the <span> element that closes the modal
  var span = document.getElementsByClassName("close")[0];

// When the user clicks the button, open the modal 
btn.onclick = function() {
  console.log("Clicked");
  modal.style.display = "block";
}

// When the user clicks on <span> (x), close the modal
span.onclick = function() {
  modal.style.display = "none";
}

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
  if (event.target == modal) {
    modal.style.display = "none";
  }
}
    
    </script>
   
    
    </body>
</html>











